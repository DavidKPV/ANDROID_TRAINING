<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USUARIO"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/Negro"
        android:gravity="center"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/etNombre"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce tu nombre"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:digits="QWERTYUIOPASDFGHJKLÑZXCVBNMqwertyuiopasdfghjklñzxcvbnm "
        />
<!--
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AÑO DE NACIMIENTO"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/Negro"
        android:gravity="center"
        android:layout_marginTop="50dp"
        />
-->
    <Spinner
        android:id="@+id/slista1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="20sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEXO"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/Negro"
        android:gravity="center"
        android:layout_marginTop="30sp"
        />


    <RadioGroup
        android:id="@+id/rgSexo"
        android:checkedButton="@id/rgSexo"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_column="0"
        android:layout_span="2">

        <RadioButton
            android:id="@+id/rbHombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hombre"
            android:layout_marginTop="10sp"
            android:textIsSelectable="true"
            />
        <RadioButton
            android:id="@+id/rbMujer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mujer"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="30sp"
            />
    </RadioGroup>

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ENVIAR DATOS"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="120sp"
        android:layout_marginRight="120sp"
        android:background="@color/agua"
        />
</LinearLayout>