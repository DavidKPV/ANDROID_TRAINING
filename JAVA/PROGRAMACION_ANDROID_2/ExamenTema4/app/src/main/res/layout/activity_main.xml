<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoexamen"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EXAMEN TEMA 4"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="20sp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By David Martinez Martinez"
        android:gravity="center"
        android:textSize="15sp"/>

    <!-- CASE BLUETOOTH -->
    <ScrollView
        android:id="@+id/caseBluetooth"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="30sp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="match_parent"
                android:text="HACER VISIBLE BLUETOOTH"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:layout_height="wrap_content"
                android:id="@+id/BluetoothVisible"/>
            <Button
                android:layout_width="match_parent"
                android:text="DISPOSITIVOS EMPAREJADOS"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:layout_height="wrap_content"
                android:id="@+id/BluetoothDispositivos"/>
            <TextView
                android:layout_marginTop="20sp"
                android:id="@+id/tvDispositivos"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginRight="50sp"
                android:layout_marginLeft="50sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

    <!-- CASE WIFI -->
    <ScrollView
        android:id="@+id/caseWiFi"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="30sp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:text="BUSCAR WIFI"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:layout_height="wrap_content"
                android:id="@+id/WiFiBuscar"/>
            <Button
                android:layout_width="match_parent"
                android:text="GUARDAR WIFI"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:layout_height="wrap_content"
                android:id="@+id/WiFiGuardar"/>
            <Button
                android:layout_width="match_parent"
                android:text="MOSTRAR WIFI"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:layout_height="wrap_content"
                android:id="@+id/WiFiMostrar"/>
            <TextView
                android:layout_marginTop="20sp"
                android:id="@+id/tvEstado"
                android:layout_marginRight="50sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginLeft="50sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="20sp"
                android:id="@+id/tvRedes"
                android:layout_marginRight="50sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginLeft="50sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>