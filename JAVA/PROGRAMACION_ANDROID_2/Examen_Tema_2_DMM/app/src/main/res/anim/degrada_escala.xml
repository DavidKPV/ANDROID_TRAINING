<set xmlns:android="http://schemas.android.com/apk/res/android">
    <alpha
        android:fromAlpha="0.0" android:toAlpha="2"
        android:duration="2000" android:repeatCount="infinite"
        />
    <scale
        android:fromXScale="1.0" android:toXScale="1.5"
        android:fromYScale="1.0" android:toYScale="1.5"
        android:pivotY="50%" android:pivotX="50%"
        android:repeatCount="infinite"
        android:duration="2000"
        />
    <scale
        android:fromXScale="1.5" android:toXScale="1.0"
        android:fromYScale="1.5" android:toYScale="1.0"
        android:pivotY="50%" android:pivotX="50%"
        android:repeatCount="infinite"
        android:duration="2000"
        />
    <alpha
        android:fromAlpha="2"
        android:toAlpha="0.0"
        android:duration="2000"
        android:repeatCount="infinite"
        />
