<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/fondowifi"
        tools:context=".MainActivity">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="20sp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="OPERACIONES DE WIFI"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:text="By David Martinez Martinez" />
        <Button
            android:id="@+id/btnEncender"
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50sp"
            android:layout_marginLeft="50sp"
            android:text="PRENDER WIFI"/>

        <Button
            android:id="@+id/btnApagar"
            android:layout_marginTop="0sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50sp"
            android:layout_marginLeft="50sp"
            android:text="APAGAR WIFI"/>

        <Button
            android:id="@+id/btnBuscar"
            android:layout_marginTop="0sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50sp"
            android:layout_marginLeft="50sp"
            android:text="BUSCAR WIFI"/>

        <Button
            android:id="@+id/btnGuardar"
            android:layout_marginTop="0sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50sp"
            android:layout_marginLeft="50sp"
            android:text="GUARDAR WIFI"/>

        <Button
            android:id="@+id/btnMostrar"
            android:layout_marginTop="0sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50sp"
            android:layout_marginLeft="50sp"
            android:text="MOSTRAR WIFI"/>

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="20sp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvRedes"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="20sp"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>

        <View
            android:layout_marginTop="150sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>