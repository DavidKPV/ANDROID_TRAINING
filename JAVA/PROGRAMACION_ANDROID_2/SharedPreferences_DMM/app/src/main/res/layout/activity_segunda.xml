<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SegundaActivity">
    <TextView
        android:id="@+id/textView" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginTop="30dp"
        android:text="REGISTRARSE" android:textColor="@color/colorNegro"
        android:textSize="25dp" android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textView2" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginTop="10dp"
        android:text="By David Martinez Martinez" android:textColor="@color/colorNegro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
    <TextView
        android:id="@+id/tvNombre" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginTop="20dp"
        android:ems="15" android:text="Nombre: " android:textColor="@color/colorNegro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
    <TextView
        android:id="@+id/tvApellidoP" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginTop="20dp"
        android:ems="15" android:text="Apellido Paterno: "
        android:textColor="@color/colorNegro" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNombre" />
    <TextView
        android:id="@+id/tvApellidoM" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginTop="20dp"
        android:ems="15" android:text="Apelldio Materno: "
        android:textColor="@color/colorNegro" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvApellidoP" />
    <TextView
        android:id="@+id/tvEdad" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginTop="20dp"
        android:ems="15" android:text="Edad: "
        android:textColor="@color/colorNegro" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvApellidoM" />
    <TextView
        android:id="@+id/tvUsuario" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginTop="20dp"
        android:ems="15" android:text="Usuario: " android:textColor="@color/colorNegro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEdad" />
    <TextView
        android:id="@+id/tvCorreo" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginTop="20dp"
        android:ems="15" android:text="E-mail: " android:textColor="@color/colorNegro"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUsuario" />
    <TextView
        android:id="@+id/tvPassword" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginTop="20dp"
        android:ems="15" android:text="ContraseÃ±a: "
        android:textColor="@color/colorNegro" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCorreo" />
    <Button
        android:id="@+id/btnRegresar" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginTop="40dp"
        android:text="REGRESAR" android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp" android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorBlanco" android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPassword" />
</androidx.constraintlayout.widget.ConstraintLayout>